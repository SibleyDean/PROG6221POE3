@model EventEaseFinal.Models.Booking
@{
    ViewData["Title"] = "Booking Details";
}
<h1>Booking Details</h1>

<div>
    <p><strong>Date:</strong> @Model.BookingDate.ToShortDateString()</p>
    <p><strong>Event:</strong> @Model.Event?.EventName</p>
    <p><strong>Venue:</strong> @Model.Venue?.VenueName</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.BookingId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
