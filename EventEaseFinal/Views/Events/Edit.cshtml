@model EventEaseFinal.Models.Event
@{
    ViewData["Title"] = "Edit Event";
}
<h1>Edit Event</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="EventId" />

    <div class="form-group">
        <label asp-for="EventName"></label>
        <input asp-for="EventName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EventDate"></label>
        <input asp-for="EventDate" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="VenueId">Select Venue</label>
        <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueId"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
