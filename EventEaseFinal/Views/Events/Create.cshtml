@model EventEaseFinal.Models.Event
@{
    ViewData["Title"] = "Create Event";
}
<h1>Create Event</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="EventName"></label>
        <input asp-for="EventName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EventDate"></label>
        <input asp-for="EventDate" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="VenueId">Select Venue</label>
        <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueId"></select>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
</form>
