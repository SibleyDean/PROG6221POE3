@model EventEaseFinal.Models.Venue
@{
    ViewData["Title"] = "Edit Venue";
}
<h1>Edit Venue</h1>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="VenueId" />

    <div class="form-group">
        <label asp-for="VenueName" class="control-label"></label>
        <input asp-for="VenueName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Location" class="control-label"></label>
        <input asp-for="Location" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Capacity" class="control-label"></label>
        <input asp-for="Capacity" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ImageFile" class="control-label">Change Image</label>
        <input asp-for="ImageFile" type="file" class="form-control-file" />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div>
                <img src="@Model.ImageUrl" width="150" />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
